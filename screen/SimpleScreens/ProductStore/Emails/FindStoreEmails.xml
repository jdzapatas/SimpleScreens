<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Edit Promo Code" default-menu-index="2">

    <parameter name="productStoreId" required="true"/>

    <transition name="editStoreEmail">
        <default-response url="../EditStoreEmail"/>
    </transition>
    <transition name="createStoreEmail">
        <service-call name="create#mantle.product.store.ProductStoreEmail"/>
        <default-response url="../EditPromoCode"/>
    </transition>

    <actions>
        <entity-find entity-name="mantle.product.store.ProductStoreEmail" list="storeEmails">
            <search-form-inputs default-order-by="emailTypeEnumId"/>
            <econdition field-name="productStoreId" />
        </entity-find>
    </actions>

    <widgets>
        <container-dialog id="NewStoreEmailDialog" button-text="New Store Email">
            <form-single name="NewStoreEmailForm" transition="createStoreEmail">
                <field name="productStoreId"><default-field title="Store Promotion">
                    <display-entity entity-name="mantle.product.store.ProductStore" text="ProductStoreNameTemplate"/>
                </default-field></field>
                <field name="emailTypeEnumId"><default-field title="Email Type">
                    <drop-down><entity-options key="${enumId}" text="EnumerationNameTemplate">
                        <entity-find entity-name="moqui.basic.Enumeration">
                            <econdition field-name="enumTypeId" value="ProductStoreEmailType"/>
                            <order-by field-name="enumId"/>
                        </entity-find>
                    </entity-options></drop-down>
                </default-field></field>
                <field name="fromDate"> <default-field><date-time type="date-time"/></default-field> </field>
                <field name="thruDate"> <default-field><date-time type="date-time"/></default-field> </field>
                <field name="emailTemplateId"><default-field title="Email Template">
                    <drop-down><entity-options key="${enumId}" text="${description}">
                        <entity-find entity-name="moqui.basic.email.EmailTemplate">
                            <order-by field-name="emailTemplateId"/>
                        </entity-find>
                    </entity-options></drop-down>
                </default-field></field>
                <field name="headerImagePath"><default-field title="Header Image Path"><text-line size="30"/></default-field></field>
                <field name="detailLinkPath"><default-field title="Detail Link Path"><text-line size="30"/></default-field></field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>

        <form-list name="PromoCodeForm" list="promoCodeList" skip-form="true" header-dialog="true" select-columns="true"
                   saved-finds="true" show-csv-button="true">
            <field name="promoCodeId">
                <header-field title="ID" show-order-by="case-insensitive"><text-find size="10" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${promoCodeId}" link-type="anchor"/></default-field>
            </field>
            <field name="promoCode">
                <header-field title="Promo Code" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${promoCode}" link-type="anchor"/></default-field>
            </field>
            <field name="storePromotionId">
                <header-field title="Store Promotion ID" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${storePromotionId}" link-type="anchor"/></default-field>
            </field>

            <field name="fromDate">
                <header-field title="From Date" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${fromDate}" link-type="anchor"/></default-field>
            </field>
            <field name="thruDate">
                <header-field title="Thru Date" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${thruDate}" link-type="anchor"/></default-field>
            </field>
            <field name="useLimitPerCode">
                <header-field title="Per Code" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${useLimitPerCode}" link-type="anchor"/></default-field>
            </field>
            <field name="useLimitPerCustomer">
                <header-field title="Per Customer" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${useLimitPerCustomer}" link-type="anchor"/></default-field>
            </field>
            <field name="useLimitPerOrder">
                <header-field title="Per Order" show-order-by="case-insensitive"><text-find size="25" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${useLimitPerOrder}" link-type="anchor"/></default-field>
            </field>
            <field name="userEntered">
                <header-field title="User Entered" show-order-by="case-insensitive"><text-find size="1" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${userEntered}" link-type="anchor"/></default-field>
            </field>
            <field name="requireParty">
                <header-field title="Require Party" show-order-by="case-insensitive"><text-find size="1" hide-options="true"/></header-field>
                <default-field><link url="editPromoCode" text="${requireParty}" link-type="anchor"/></default-field>
            </field>

            <field name="submitButton">
                <header-field title="Find"><submit/></header-field>
                <default-field><display text=" "/></default-field>
            </field>
        </form-list>


        <render-mode><text type="html,vuet"><![CDATA[
            <div>Icons made by <a href="https://www.flaticon.com/authors/simpleicon" title="SimpleIcon">SimpleIcon</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>
        ]]></text></render-mode>
    </widgets>

</screen>
